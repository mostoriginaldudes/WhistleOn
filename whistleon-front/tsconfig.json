{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ESNext",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~components/*": ["components/*"],
      "~utils/*": ["utils/*"],
      "~typings/*": ["typings/*"],
      "~hooks/*": ["hooks/*"],
      "~pages/*": ["pages/*"]
    }
  }
}
